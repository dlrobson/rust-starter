{
  "build": {
    "context": "..",
    "dockerfile": "../dockerfiles/build.Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.zsh_history,target=/home/user/.zsh_history,type=bind"
  ],
  "name": "${localWorkspaceFolderBasename}",
  "runArgs": [
    "--name=${localWorkspaceFolderBasename}_${localEnv:USER}"
  ]
}